---
import Usa from "../icons/usa.astro";
import Italy from "../icons/Italy.astro";
import France from "../icons/france.astro";
const Languages = [
    {
        txt: "Parla l'italiano!",
    },
    { txt: "Parle le Français!" },
    {
        txt: "Speak English today!",
    },
];
---

<section class="freeclass">
    <div class="title">
        <h2>¡Clase prueba gratuita!</h2>
    </div>
    <div class="languages">
        {
            Languages.map((lng, index) => (
                <div class={`language ${index % 2 === 0 ? "left" : "right"}`}>
                    <div class="icon">
                        {index === 0 ? (
                            <Italy width="150" height="150" />
                        ) : index === 1 ? (
                            <France width="150" height="150" />
                        ) : (
                            <Usa width="150" height="150" />
                        )}
                    </div>
                    <div class="txt">{lng.txt}</div>
                </div>
            ))
        }
    </div>
</section>

<style>
    .freeclass {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 30px;
        padding: 2em;
    }

    .title h2 {
        font-size: 2rem;
        font-weight: bold;
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }

    .languages {
        display: flex;
        flex-direction: column;
        gap: 15px;
        width: 100%;
    }

    .language {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 15px;
        border-radius: 8px;
        max-width: 400px;
        width: 100%;
        margin: 0 auto;
    }

    .language.left {
        flex-direction: row; /* Icon on the left, text on the right */
    }

    .language.right {
        flex-direction: row-reverse; /* Icon on the right, text on the left */
    }

    .icon {
        width: 70px;
        height: 70px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .txt {
        font-size: 1rem;
        color: #333;
        text-align: center;
    }

    /* Media Queries for Responsiveness */
    @media (max-width: 768px) {
        .title h2 {
            font-size: 1.8rem;
        }

        .language {
            max-width: 90%; /* Reduce the width on smaller screens */
            padding: 10px;
            gap: 8px;
        }

        .icon {
            width: 60px;
            height: 60px; /* Scale down icons */
        }

        .txt {
            font-size: 0.9rem; /* Slightly smaller text size */
        }
    }

    @media (max-width: 480px) {
        .title h2 {
            font-size: 1.5rem; /* Smaller font for mobile */
        }

        .languages {
            gap: 10px;
        }

        .language {
            flex-direction: column; /* Stack icon and text vertically */
            text-align: center;
        }

        .icon {
            width: 150px;
            height: 150px; /* Further scale down icons */
        }

        .txt {
            font-size: 0.8rem; /* Adjust text size for mobile */
        }
    }
</style>
