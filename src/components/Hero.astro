---
import Circleirregular from "../icons/circleirregular.astro";
import CheckIcon from "../icons/checkicon.astro";
const { title } = Astro.props;
const ADVANTAGES = [
    { description: "Si planeas viajar, necesitas comunicarte." },
    {
        description:
            "Si te parece romántico el francés ahora podrás hablarlo.",
    },
    {
        description:
            "Si te gusta la cultura italiana, te encantará hablar italiano.",
    },
    { description: "Disfruta las películas en su idioma original." },
];
---

<section class="hero">
    <div class="background">
        <Circleirregular width="100%" height="100%" fill="#456A89" />
    </div>
    <div class="content">
        <h1 class="title">{title}</h1>
        <ul class="advantages">
            {
                ADVANTAGES.map((adv) => (
                    <li>
                        <CheckIcon width="30" height="30" fill="var(--white)" />
                        {adv.description}
                    </li>
                ))
            }
        </ul>
    </div>
</section>

<style>
    .hero {
        position: relative;
        min-height: 60vh;
        padding: 2em;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: var(--white);
        overflow: hidden;
    }
    .background {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100%;
        height: 550px;
        opacity: 0.6;
        z-index: -1;
    }
    .content {
        position: relative;
        z-index: 1;
        max-width: 900px;
        padding: 1em;
    }
    .title {
        font-size: 2.5em;
        margin-bottom: 1em;
        line-height: 1.2;
    }
    .advantages {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1em;
        list-style: none;
        padding: 0;
        margin: 0 auto;
        max-width: 600px;
    }
    .advantages li {
        display: flex;
        align-items: center;
        gap: 0.5em;
        font-size: 1em;
    }

    /* Media Queries for Responsiveness */
    @media (max-width: 1024px) {
        .background {
            height: 400px; /* Scale background for medium screens */
        }
        .title {
            font-size: 2em;
        }
        .advantages {
            grid-template-columns: 1fr;
        }
    }

    @media (max-width: 768px) {
        .background {
            height: 300px;
            width: 90%;
        }
        .hero {
            padding: 1.5em;
        }
        .title {
            font-size: 1.8em;
        }
        .advantages li {
            font-size: 0.9em;
        }
    }

    @media (max-width: 480px) {
        .background {
            height: 200px;
            width: 80%;
            opacity: 0.4;
        }
        .hero {
            padding: 1em;
        }
        .title {
            font-size: 1.5em;
        }
        .advantages li {
            font-size: 0.8em;
        }
    }
</style>
